{
  "compilerOptions": {
    "target": "ES2020",                    // Change from ES5 to ES2020
    "module": "commonjs",
    "moduleResolution": "node",  
    "esModuleInterop": true,               // Add this
    "downlevelIteration": true,            // Add this
    "allowSyntheticDefaultImports": true,  // Add this (usually comes with esModuleInterop)
    "strict": true,
    "skipLibCheck": true,                  // Add this to skip checking node_modules
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}