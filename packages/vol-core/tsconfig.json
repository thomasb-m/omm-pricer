    "composite": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "module": "NodeNext",
    "target": "es2022",
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "types": [
      "node",
      "undici-types",
      "vitest"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "tests",
    "**/*.test.ts"
  ]
}
